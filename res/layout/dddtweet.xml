<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
<ImageView android:id="@+id/Twitterer_Pic"
               android:layout_width="73px"
               android:layout_height="73px"
               android:padding="1dip"
               android:src="@drawable/user_placeholder"
                />
<LinearLayout android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent">
    <TextView android:id="@+id/Tweet_Twitterer"
              android:layout_width="wrap_content"
              android:text="Tweeterer"
              android:padding="2dip"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:layout_toLeftOf="@id/Twitterer_Pic"
              android:layout_alignParentTop="true"
            />

    <TextView android:id="@+id/Detail_TweetContent"
              android:text="This test text should be a little longer just so we can how a really long session description will look.  Although it might be better to have a seperate detail page"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="4dip"
              android:layout_below="@id/Tweet_Twitterer" />
    </LinearLayout>
 </LinearLayout>
