<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
	<LinearLayout android:orientation="horizontal" 
				  android:layout_width="fill_parent"
    			  android:layout_height="fill_parent"
    			  android:layout_weight="2">
    			     
		<TextView android:text="DDD North"
				  android:layout_width="fill_parent" 
				  android:layout_height="wrap_content" 
				  
				   />
		<ImageView android:id="@+id/imageView1" 
				   android:layout_height="wrap_content" 
				   android:layout_width="fill_parent" 
				   android:src="@drawable/logo"/>
	</LinearLayout> 
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Next"
	    android:layout_gravity="center_horizontal"
	    android:textColor="#3033CC"
	    android:gravity="center_horizontal" android:textStyle="bold" android:textSize="20dp"/>
	<TextView
		android:id="@+id/next_session_title"
		android:textStyle="bold" 
		android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<TextView
		android:id="@+id/next_session_short_info"
		android:textStyle="italic" 
		android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
            
    <RelativeLayout android:layout_height="wrap_content" 
    				android:layout_width="wrap_content" 
    				android:layout_gravity="center" >
	    <Button
	        android:id="@+id/ShowSchedule"
	        android:text="Schedule"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="left"
	        />
	    <!-- <Button
	        android:id="@+id/TweetStream"
	        android:text="Tweets"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="right"
	        android:layout_toRightOf="@id/ShowSchedule"/> -->
	</RelativeLayout>
</LinearLayout>