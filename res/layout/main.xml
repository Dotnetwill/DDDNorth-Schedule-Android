<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
	<LinearLayout android:orientation="horizontal" 
				  android:layout_width="fill_parent" 
				  android:layout_height="wrap_content"
				  android:layout_marginBottom="15dp">
    			     
		<TextView android:text="DDD North Sessions"
				  android:layout_width="fill_parent" 
				  android:layout_height="fill_parent" 
				  android:background="#652d90"
				  android:textColor="#ffffff"
				  android:textSize="30dp"
				  android:padding="3dp"
				  android:layout_weight="1"
				  android:textStyle="bold" 
				  android:gravity="center_vertical|center_horizontal"
				   />
				   
		<ImageView android:id="@+id/imageView1" 
				   android:layout_height="wrap_content" 
				   android:src="@drawable/logo"
				   android:layout_gravity="top" 
				   android:layout_width="wrap_content"/>
	</LinearLayout> 
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Next Session"
	    android:layout_gravity="center_horizontal"
	    android:textColor="#652d90"
	    android:gravity="center_horizontal" 
	    android:textStyle="bold" 
	    android:textSize="20dp"/>
	<TextView
		android:id="@+id/next_session_title"
		android:textStyle="bold" 
		android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
	<TextView
		android:id="@+id/next_session_short_info"
		android:textStyle="italic" 
		android:layout_gravity="center_horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
            
    <RelativeLayout android:layout_height="wrap_content" 
    				android:layout_width="wrap_content" 
    				android:layout_gravity="center"
                    android:id="@+id/buttonLayout">
	    <Button
	        android:id="@+id/ShowSchedule"
	        android:text="Schedule"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="left"
	        />
	    <Button
	        android:id="@+id/TweetStream"
	        android:text="Tweets"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="right"
	        android:layout_toRightOf="@id/ShowSchedule"/>
	</RelativeLayout>
    <include layout="@layout/dddtweet" />

</LinearLayout>