
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"  
				 android:orientation="vertical"
    			 android:layout_width="fill_parent"
    			 android:layout_height="fill_parent" >	 
	<TextView android:id="@+id/Detail_SessionTitle" 
		      android:layout_width="fill_parent"
		      android:text="My giddy God it's Harry Potter!!"
		      android:layout_height="wrap_content" />
	<TextView android:id="@+id/Detail_ClippedSessionDesc" 
			  android:text="This test text should be a little longer just so we can how a really long session description will look.  Although it might be better to have a seperate detail page"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_below="@id/Detail_SessionTitle" />
	
	<TextView android:id="@+id/Detail_SessionSpeaker" 
			  android:text="General Awesome"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_below="@+id/Detail_ClippedSessionDesc" />
		      
	<TextView android:id="@+id/Detail_SessionRoom" 
			  android:text="Room 101"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_below="@id/Detail_SessionSpeaker" />
		      
	<CheckBox android:layout_height="wrap_content" 
			  android:layout_width="wrap_content" 
			  android:id="@+id/Detail_Attend" 
			  android:layout_below="@id/Detail_SessionSpeaker"
			  android:layout_alignParentRight="true" />	
</RelativeLayout>